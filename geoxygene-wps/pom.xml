<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>geoxygene</artifactId>
		<groupId>fr.ign.cogit</groupId>
		<version>1.6-SNAPSHOT</version>
	</parent>

	<artifactId>geoxygene-wps</artifactId>
	<packaging>jar</packaging>
	<name>GeOxygene Web Processing Services</name>
	<description></description>

	<licenses>
		<license>
			<name>CeCILL License</name>
			<url>http://www.cecill.info/</url>
		</license>
	</licenses>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<geoserver.extension.version>2.3.5</geoserver.extension.version>
		<path.geoserver>D:\MesProgrammes\GeoServer\GeoServer-2.3.5\GeoServer 2.3.5\webapps\geoserver\WEB-INF\lib</path.geoserver>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.geoserver.extension</groupId>
			<artifactId>wps-core</artifactId>
			<version>${geoserver.extension.version}</version>
		</dependency>

		<dependency>
			<groupId>com.vividsolutions</groupId>
			<artifactId>jts</artifactId>
		</dependency>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>geoxygene-io</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>geoxygene-contrib</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>opengeo</id>
			<url>http://repo.opengeo.org</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<profiles>
		<profile>
			<id>geoserver</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.4</version>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
									
									<!-- 
									   <available file="${configDirectory}/${configId}"
                                    property="configIsAvailable" />
                                <fail
                                    message="Unable to locate configuration: ${configDirectory}/${configId}"
                                    unless="configIsAvailable" />
 -->
										<!-- <echo>Stop geoserver</echo> <exec executable="D:\MesProgrammes\GeoServer\GeoServer2.2.3\bin\shutdown.bat 
											/>" -->

										<echo>Delete GeOxygene libraries</echo>
										<delete
											file="${path.geoserver}geoxygene-wps-${project.version}.jar" />
										<delete
											file="${path.geoserver}geoxygene-api-${project.version}.jar" />
										<delete
											file="${path.geoserver}geoxygene-feature-${project.version}.jar" />
										<delete
											file="${path.geoserver}geoxygene-contrib-${project.version}.jar" />
										<delete file="${path.geoserver}geoxygene-io-${project.version}.jar" />
										<delete
											file="${path.geoserver}geoxygene-spatial-${project.version}.jar" />

										<echo>Copy GeOxygene libraries into GeoServer WEB-INF\lib</echo>
										<copy file="${basedir}/target/geoxygene-wps-${project.version}.jar"
											todir="${path.geoserver}" />

										<copy
											file="${basedir}/../geoxygene-api\target\geoxygene-api-${project.version}.jar"
											todir="${path.geoserver}" />

										<copy
											file="${basedir}/../geoxygene-feature\target\geoxygene-feature-${project.version}.jar"
											todir="${path.geoserver}" />

										<copy
											file="${basedir}/../geoxygene-contrib\target\geoxygene-contrib-${project.version}.jar"
											todir="${path.geoserver}" />

										<copy
											file="${basedir}/../geoxygene-io\target\geoxygene-io-${project.version}.jar"
											todir="${path.geoserver}" />

										<copy
											file="${basedir}/../geoxygene-spatial\target\geoxygene-spatial-${project.version}.jar"
											todir="${path.geoserver}" />

										<!-- echo>Start geoserver</echo> <exec executable="D:\MesProgrammes\GeoServer\GeoServer2.2.3\bin\startup.bat" 
											/ -->
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>