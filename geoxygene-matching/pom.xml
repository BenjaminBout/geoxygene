	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>geoxygene</artifactId>
		<groupId>fr.ign.cogit</groupId>
		<version>1.7-SNAPSHOT</version>
	</parent>

	<artifactId>geoxygene-matching</artifactId>
	<packaging>jar</packaging>

	<name>geoxygene-matching</name>
	<description>
		- Matching with Dempster Shafer Theory
		- Implementation of Li and Goodchild's approach for linear feature matching
		- Minimalistic implementation of &quot;Hidden Markov Map Matching Through Noise and Sparseness&quot; </description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<developers>
		<developer>
			<id>julien-perret</id>
			<name>Julien Perret</name>
			<email>julien.perret(at)gmail.com</email>
			<url>http://recherche.ign.fr/labos/cogit/cv.php?prenom=Julien&amp;nom=Perret</url>
			<organization>Laboratoire COGIT, IGN</organization>
			<organizationUrl>http://recherche.ign.fr/labos/cogit</organizationUrl>
			<roles>
				<role>Administrator</role>
			</roles>
		</developer>
		<developer>
			<id>bdumenieu</id>
			<name>Bertrand Dumenieu</name>
			<email>bertranddumenieu(at)gmail.com</email>
			<organization>Laboratoire LaDÃ©HiS, EHESS</organization>
			<organizationUrl>http://www.ehess.fr/ldh/</organizationUrl>
		</developer>
	</developers>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<configuration>
					<formats>
						<format>xml</format>
					</formats>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<!-- Skips unit tests if the value of skip.unit.tests property is true -->
					<skipTests>false</skipTests>
					<!-- Excludes R tests temporarely. -->
					<excludes>
						<exclude>**/RDempsterOpCompareTest.java</exclude>
						<exclude>**/DeleteDoubleCombinationTest.java</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.5.3</version>
                <executions>
                    <execution>
                        <id>data-test-matching</id>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/resources.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-dependency-plugin</artifactId>
		        <version>2.9</version>
		        <executions>
		            <execution>
		                <id>unpack-shared-resources</id>
		                <goals>
		                    <goal>unpack-dependencies</goal>
		                </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <outputDirectory>${project.build.directory}/../data/onto/</outputDirectory>
                            
                            <includeArtifacIds>geoxygene-ontology</includeArtifacIds>
                            <includeGroupIds>${project.groupId}</includeGroupIds>
                            <includeClassifiers>onto</includeClassifiers>
                            <excludeArtifactIds>geoxygene-api,geoxygene-contrib,evidence4j,geoxygene-feature,geoxygene-filter,geoxygene-io,geoxygene-spatial,geoxygene-util</excludeArtifactIds>
                            
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>

